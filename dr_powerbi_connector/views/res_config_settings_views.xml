<odoo>
    <record id="view_powerbi_settings_form" model="ir.ui.view">
        <field name="name">res.config.settings.form.powerbi</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
            <!-- <xpath expr="//div[hasclass('settings')]" position="inside"> -->
                <div class="app_settings_block" data-string="PowerBI Connector"
                    string="PowerBI Connector" data-key="powerbi_connector">
                    <h2>PowerBI Connector</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="row">
                            <span class="o_form_label">PowerBI Verify Token</span>
                            <div class="text-muted content-group mt16">
                                <field name="powerbi_verify_token" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>