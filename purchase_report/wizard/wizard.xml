<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_report_wizard" model="ir.ui.view">
        <field name="name">Purchase Order Analysis Report</field>
        <field name="model">purchase.report</field>
        <field name="arch" type="xml">
            <form string="Purchase Report">
                <group>
                   <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="product_ids" widget="many2many_tags"/>
                        
                        <field name="vendor"/>
                    </group>
                   <group>
                        <field name="po_no"/>
                        <field name="grn"/>
                        <field name="invoice_no"/>
                        
                    </group>
                </group>
                <footer>
                    <button name="print_report" type="object" string="Print" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="purchase_report_action" model="ir.actions.act_window">
        <field name="name">Purchase Report</field>
        <field name="res_model">purchase.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="purchase_report_id"
              name="Purchase Order Analysis Report"
              parent="account.menu_finance_reports"
              action="purchase_report_action"
    />
</odoo>