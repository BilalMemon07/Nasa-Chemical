<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="po_reports">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">

                <div class="header">
                    <!--<div class="row">-->
                        <div class="row text-center">
                            <h1>NASA CHEMICALS</h1>
                        </div>
                        <div class="row text-center">
                            <h1>Purchase Order - Report</h1>
                        </div>
                        <div class="row">
                            <div class= "col-12" style= "text-align:center">
                                <t t-if="other['from_date']">
                                    <b>From :</b>
                                    <t t-esc="other['from_date']"/>
                                </t>
                                <br/>
                                <t t-if="other['to_date']">
                                    <b>To :</b>
    
                                    <t t-esc="other['to_date']"/>
                                </t>
                            </div>
                            
                        </div>
                        <!--</div>-->
                    <!--</div>-->
                </div>
                
                <div class="page">
                    <div class="row mt-5 mb-3">
                        <div class="col-12">
                            <table class="table-bordered">
                                <thead>
                                    <tr>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:4px;width:120px;">
                                            <b>Date</b>
                                        </th>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:4px;width:300px;">
                                            <b>Item</b>
                                        </th>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:4px;width:120px;">
                                            <b>Req No</b>
                                        </th>
                                        
                                        <th style="text-align:center;border-bottom:1px solid black;padding:4px;width:100px;">
                                            <b>PO No</b>
                                        </th>
                                        
                                        <th style="text-align:center;border-bottom:1px solid black;padding:4px;width:100px;">
                                            <b>GRN</b>
                                        </th>
                                        
                                        <th style="text-align:center;border-bottom:1px solid black;padding:4px;width:100px;">
                                            <b>Invoice No</b>
                                        </th>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:4px;width:120px;">
                                            <b>Rcvd Locaion</b>
                                        </th>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:10px;width:80px;">
                                            <b>Unit</b>
                                        </th>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:4px;width:80px;">
                                            <b>Order Qty</b>
                                        </th>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:4px;width:80px;">
                                            <b>Rcvd Qty</b>
                                        </th>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:4px;width:80px;">
                                            <b>Balance Qty</b>
                                        </th>
                                        
                                        <th style="text-align:center;border-bottom:1px solid black;padding:4px;width:80px;">
                                            <b>Price</b>
                                        </th>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:4px;width:80px;">
                                            <b>Amount</b>
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="data" t-as="value">

                                        <td style="text-align:center; padding:2px;"><span t-esc="value['date']"/></td>
                                        <td style="text-align:center; padding:2px;"><span t-esc="value['item']"/></td>
                                        <td style="text-align:center; padding:2px;"><span t-esc="value['prno']"/></td>
                                        <td style="text-align:center; padding:2px;"><span t-esc="value['pono']"/></td>
                                        <td style="text-align:center; padding:2px;"><span t-esc="value['grn']"/></td>
                                        <td style="text-align:center; padding:2px;"><span t-esc="value['invoiceno']"/>WH/IN/00022</td>
                                        <td style="text-align:center; padding:2px;"><span t-esc="value['location']"/></td>
                                        <td style="text-align:center; padding:2px;"><span t-esc="value['unit']"/></td>
                                        <td style="text-align:center; padding:2px;"><span t-esc="value['orderqty']"/></td>
                                        <td style="text-align:center; padding:2px;"><span t-esc="value['recievedqty']"/></td>
                                        <td style="text-align:center; padding:2px;"><span t-esc="value['balanceqty']"/></td>
                                        <td style="text-align:right; padding:2px;"><span t-esc="value['price']"/></td>
                                        <td style="text-align:right; padding:2px;"><span t-esc="value['amount']"/></td>
                                        
                                    </tr>
                                    <tr>
                                        <td colspan="8" class="total-cell" style="text-align:right; padding:4px;">
                                            <b>Totals</b>
                                        </td>
                                        <td class="total-cell" style="text-align:center; padding:2px;">
                                            <b><span t-esc="totals['total_orderqty']" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2, &quot;thousands_sep&quot;: &quot;,&quot;}"/></b>
                                        </td>
                                        <td class="total-cell" style="text-align:center; padding:2px;">
                                            <b><span t-esc="totals['total_recievedqty']" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2, &quot;thousands_sep&quot;: &quot;,&quot;}"/></b>
                                        </td>
                                        <td class="total-cell" style="text-align:center; padding:2px;">
                                            <b><span t-esc="totals['total_balanceqty']" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2, &quot;thousands_sep&quot;: &quot;,&quot;}"/></b>
                                        </td>
                                        <td class="total-cell" style="text-align:right; padding:2px;">
                                            <b><span t-esc="totals['total_price']" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2, &quot;thousands_sep&quot;: &quot;,&quot;}"/></b>
                                        </td>
                                        <td class="total-cell" style="text-align:right; padding:2px;">
                                            <b><span t-esc="totals['total_amount']" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2, &quot;thousands_sep&quot;: &quot;,&quot;}"/></b>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                </div>
            </t>
        </t>

    </template>
</odoo>