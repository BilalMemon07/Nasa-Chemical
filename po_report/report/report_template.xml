<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="po_reports">
            <t t-call="web.html_container">

                <div class="header">
                    <div class="row">
                        <div class="row text-center">
                            <h2>NASA CHEMICALS</h2>
                                <br/>
                            <h2>Purchase Order - Report</h2>
                            <!-- <t t-if="other['from_date']"> -->
                                    <b>From :</b>
                                    <!-- <t t-esc="other['from_date']" /> -->
                            <!-- </t> -->
                            <br />
                            <!-- <t t-if="other['to_date']"> -->
                                <b>To :</b>

                                <!-- <t t-esc="other['to_date']" /> -->
                            <!-- </t> -->
                        </div>
                    </div>
                </div>
                
                <div class="page">
                    
                    <div class="row mt-5 mb-3">
                        <div class="col-12">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <!-- <th>S/N</th> -->
                                        <th>Date</th>
                                        <th>Item</th>
                                        <th>Req No</th>
                                        <th>PO No</th>
                                        <th>GRN</th>
                                        <th>Invoice No</th>
                                        <th>Order Qty</th>
                                        <th>Rcvd Qty</th>
                                        <th>Balance Qty</th>
                                        <th>Unit</th>
                                        <th>Price</th>
                                        <th>Amount</th>
                                        <th>Rcvd Locaion</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                <!-- <t t-set="sn" t-value="1"/> -->
                                    <tr t-foreach="data" t-as="value">

                                        <!-- <td><span t-esc="sn"/></td>
                                        <t t-set="sn" t-value="sn + 1"/> -->
                                        <td><span t-esc="value['date']"/></td>
                                        <td><span t-esc="value['item']"/></td>
                                        <td><span t-esc="value['reqno']"/></td>
                                        <td><span t-esc="value['pono']"/></td>
                                        <td><span t-esc="value['grn']"/></td>
                                        <td><span t-esc="value['invoiceno']"/></td>
                                        <td><span t-esc="value['orderqty']"/></td>
                                        <td><span t-esc="value['recievedqty']"/></td>
                                        <td><span t-esc="value['balanceqty']"/></td>
                                        <td><span t-esc="value['unit']"/></td>
                                        <td><span t-esc="value['price']"/></td>
                                        <td><span t-esc="value['amount']"/></td>
                                        
                                        <td><span t-esc="value['location']"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                </div>
            <!-- </t> -->
        </t>

    </template>
</odoo>