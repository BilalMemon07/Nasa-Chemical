<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="monthly.report_wizard" model="ir.ui.view">
        <field name="name">Purchase Order Month Wise Report</field>
        <field name="model">monthly.report</field>
        <field name="arch" type="xml">
            <form string="Purchase Order Month Wise Report">
                <group>
                   <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        
                        <!-- <field name="warehouse_id" widget="many2one_tags"/> -->
                    </group>
                   <group>
                        <field name="product_ids" widget="many2many_tags"/>
                        <field name="vendor_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button name="print_report" type="object" string="Print" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="monthly.report_action" model="ir.actions.act_window">
        <field name="name">Purchase Order Month Wise Report</field>
        <field name="res_model">monthly.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="monthly.report_id"
              name="Purchase Order Month Wise Report"
              parent="account.menu_finance_reports"
              action="monthly.report_action"
    />
</odoo>