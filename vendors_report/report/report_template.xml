<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="vendors_reports">
            <t t-call="web.html_container">

                <div class="header">
                    <div class="row">
                        <div class="row text-center">
                            <h1>NASA CHEMICALS</h1>
                                <br/>
                            <h1>Advance to Vendors Report</h1>
                            <t t-if="other['from_date']">
                                    <b>From :</b>
                                    <t t-esc="other['from_date']" />
                            </t>
                            <br />
                            <t t-if="other['to_date']">
                                <b>To :</b>

                                <t t-esc="other['to_date']" />
                            </t>
                        </div>
                    </div>
                </div>
                
                <div class="page">
                    <div class="row mt-5 mb-3">
                        <div class="col-12">
                            <table class="table-bordered">

                                <thead>
                                    <tr>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:10px;width:180px;">
                                            <b>Vendor</b>
                                        </th>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:10px;width:120px;">
                                            <b>PO No</b>
                                        </th>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:10px;width:100px;">
                                            <b>PO Date</b>
                                        </th>
                                        
                                        <th style="text-align:center;border-bottom:1px solid black;padding:10px;width:150px;">
                                            <b>Adv Date</b>
                                        </th>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:10px;width:100px;">
                                            <b>Due Date</b>
                                        </th>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:10px;width:100px;">
                                            <b>Days</b>
                                        </th>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:10px;width:100px;">
                                            <b>PO Amount</b>
                                        </th>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:10px;width:100px;">
                                            <b>Adv Amount</b>
                                        </th>
                                        <th style="text-align:center;border-bottom:1px solid black;padding:10px;width:100px;">
                                            <b>Pending Amt.</b>
                                        </th>
                                        

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="data" t-as="value">

                                        <td style="text-align:left;"><span t-esc="value['vendor']"/></td>
                                        <td style="text-align:left;"><span t-esc="value['pono']"/></td>
                                        
                                        <td style="text-align:left;"><span t-esc="value['podate']"/></td>
                                        <td style="text-align:left;"><span t-esc="value['advdate']"/></td>
                                        <td style="text-align:left;"><span t-esc="value['duedate']"/></td>
                                        <td style="text-align:left;"><span t-esc="value['duedays']"/></td>
                                        <td style="text-align:right;"><span t-esc="value['poamount']"/></td>
                                        <td style="text-align:right;"><span t-esc="value['advamount']"/></td>
                                        <td style="text-align:right;"><span t-esc="value['pendamount']"/></td>
                                        
                                    </tr>
                                    
                                    <tr>
                                        <td colspan="5" class="total-cell" style="text-align:right; padding:4px;">
                                            <b>Totals</b>
                                        </td>
                                        <td class="total-cell" style="text-align:right; padding:4px;">
                                            <b><span t-esc="totals['total_poamount']" t-options='{"widget": "float", "precision": 2, "thousands_sep": ","}'/></b>
                                        </td>
                                        <td class="total-cell" style="text-align:right; padding:4px;">
                                            <b><span t-esc="totals['total_advamount']" t-options='{"widget": "float", "precision": 2, "thousands_sep": ","}'/></b>
                                        </td>
                                        <td class="total-cell" style="text-align:right; padding:4px;">
                                            <b><span t-esc="totals['total_pendamount']" t-options='{"widget": "float", "precision": 2, "thousands_sep": ","}'/></b>
                                        </td>
                                    </tr>

                                </tbody>



                                    
                            </table>
                        </div>
                    </div>
                    
                </div>
            <!-- </t> -->
        </t>

    </template>
</odoo>